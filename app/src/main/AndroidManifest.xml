<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.nytimessearch" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.Search"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".article_item"
            android:label="@string/title_activity_article_item" >
        </activity>
        <activity
            android:name=".activities.ArticleViewActivity"
            android:label="@string/title_activity_article_view" >
        </activity>
        <activity
            android:name=".activities.FilterActivity"
            android:label="@string/title_activity_filter" >
        </activity>
    </application>

</manifest>
